<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".RegistroActivity"
    tools:showIn="@layout/activity_registro">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backlogin"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="315dp"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/partyumlogo" />

        <EditText
            android:id="@+id/etUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="152dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Usuario..."
            android:backgroundTint="@android:color/background_light"
            android:textColor="@android:color/background_light"
            android:textColorHint="@android:color/darker_gray"/>

        <EditText
            android:id="@+id/etContra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="205dp"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="Contraseña..."
            android:backgroundTint="@android:color/background_light"
            android:textColor="@android:color/background_light"
            android:textColorHint="@android:color/darker_gray"/>

        <EditText
            android:id="@+id/etContra2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="258dp"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="Repite la contraseña..."
            android:backgroundTint="@android:color/background_light"
            android:textColor="@android:color/background_light"
            android:textColorHint="@android:color/darker_gray"/>

        <EditText
            android:id="@+id/etNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="312dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Nombre..."
            android:backgroundTint="@android:color/background_light"
            android:textColor="@android:color/background_light"
            android:textColorHint="@android:color/darker_gray"/>

        <EditText
            android:id="@+id/etApellidos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="365dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Apellidos..."
            android:backgroundTint="@android:color/background_light"
            android:textColor="@android:color/background_light"
            android:textColorHint="@android:color/darker_gray"/>

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="415dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:hint="Email..."
            android:backgroundTint="@android:color/background_light"
            android:textColor="@android:color/background_light"
            android:textColorHint="@android:color/darker_gray"/>

        <ImageButton
            android:id="@+id/btnAtras"
            android:layout_width="59dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="97dp"
            android:layout_marginTop="500dp"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/atras" />

        <ImageButton
            android:id="@+id/btnGuardar"
            android:layout_width="54dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="105dp"
            android:layout_marginTop="500dp"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/guardar" />

        <TextView
            android:id="@+id/tvErrorRegistro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="140dp"
            android:text="El usuario ya existe"
            android:textColor="@android:color/holo_red_light"
            android:visibility="invisible" />

        <ProgressBar
            android:id="@+id/pbGuardando"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="invisible" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>