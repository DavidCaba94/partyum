<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TabCuenta1Fragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/ivImagenUsuarioCuenta"
                        android:layout_width="300px"
                        android:layout_height="300px"
                        android:src="@drawable/usericon"
                        android:visibility="invisible"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteX="148dp"
                        tools:layout_editor_absoluteY="46dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal">

                    <ProgressBar
                        android:id="@+id/pbCuenta1"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="visible" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal">

                    <EditText
                        android:id="@+id/etUsuarioCuenta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:enabled="false"
                        android:inputType="textPersonName"
                        android:text="Usuario..."
                        android:visibility="invisible"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteX="99dp"
                        tools:layout_editor_absoluteY="209dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal">

                    <EditText
                        android:id="@+id/etContrasenaCuenta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPassword"
                        android:text="Contraseña..."
                        android:visibility="invisible"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteX="98dp"
                        tools:layout_editor_absoluteY="288dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal">

                    <EditText
                        android:id="@+id/etContrasenaRepCuenta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPassword"
                        android:text="Contraseña..."
                        android:visibility="invisible"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteX="98dp"
                        tools:layout_editor_absoluteY="372dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal">

                    <EditText
                        android:id="@+id/etNombreCuenta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="Nombre..."
                        android:visibility="invisible"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteX="98dp"
                        tools:layout_editor_absoluteY="452dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal">

                    <EditText
                        android:id="@+id/etApellidosCuenta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="Apellidos..."
                        android:visibility="invisible"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteX="98dp"
                        tools:layout_editor_absoluteY="531dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal">

                    <EditText
                        android:id="@+id/etEmailCuenta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textEmailAddress"
                        android:text="ejemplo@ejemplo.com"
                        android:visibility="invisible"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteX="98dp"
                        tools:layout_editor_absoluteY="609dp" />
                </TableRow>
            </TableLayout>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow
                    android:layout_width="54dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal">

                    <ImageButton
                        android:id="@+id/btnGuardarCuenta"
                        android:layout_width="54dp"
                        android:layout_height="60dp"
                        android:background="@android:color/transparent"
                        android:scaleType="centerCrop"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/guardar"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteX="161dp"
                        tools:layout_editor_absoluteY="666dp" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>